<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ohm_calculator_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vmac.boardcircuit.ohmCalculatorSelect"
    tools:showIn="@layout/activity_ohm_calculator_select">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_width="match_parent">

    <Button
        android:id="@+id/voltsbutton"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/volts"
        android:layout_marginTop="5.5dp"
        android:gravity="center"
        android:onClick="calculaVoltagemAct"
        style="@android:style/Widget.Button" />


    </TableRow>



    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="280dp"
        android:gravity="center"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/ampbutton"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/amp"
            android:onClick="calculaResistenciaAct"
            android:layout_marginTop="5.5dp"
            android:gravity="center"
            style="@android:style/Widget.Button" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_height="650dp"
        android:gravity="center"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/resbutton"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/cond"
            android:layout_marginTop="5.5dp"
            android:gravity="center"
            style="@android:style/Widget.Button" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/powerbutton"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/powericon"
            android:layout_marginTop="5.5dp"
            android:gravity="center"
            style="@android:style/Widget.Button" />

    </TableRow>

</RelativeLayout>
